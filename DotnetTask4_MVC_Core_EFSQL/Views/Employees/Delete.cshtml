@model Employee

<h1>Delete Employee</h1>

<form asp-action="Delete" asp-controller="Employees" method="post" onsubmit="return ConfirmDelete()">
    <table>
        <tr>
            <td><label asp-for="EmployeeId">Enter Id to Delete</label></td>
            <td><input asp-for="EmployeeId" /></td>
            <td><button type="submit" value="submit">Delete Employee</button></td>
        </tr>
    </table>
</form>
<a asp-action="Index" asp-controller="Employees">Back to List</a>
@section Scripts {
    <script>
        function ConfirmDelete() {
            return confirm("Are you sure you want to delete this employee?");
        }
    </script>
}
